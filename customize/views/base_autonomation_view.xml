<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- SEARCH -->
<record id="view_base_automation_search_custom" model="ir.ui.view">
    <field name="name">base.automation.search.custom</field>
    <field name="model">base.automation</field>
    <field name="inherit_id" ref="base_automation.view_base_automation_search"/>
    <field name="arch" type="xml">

         <field name="name" position="after">
            <field name="employee_id" string="Employee"/>
        </field>

    </field>
</record>

<!-- TREE -->
<record id="view_base_automation_tree_custom" model="ir.ui.view">
    <field name="name">base.automation.tree.custom</field>
    <field name="model">base.automation</field>
    <field name="inherit_id" ref="base_automation.view_base_automation_tree"/>
    <field name="arch" type="xml">

         <field name="name" position="after">
            <field name="employee_id" string="Employee"/>
        </field>

    </field>
</record>

<!--   TODO  -->
<record id="view_base_automation_form_custom" model="ir.ui.view">
    <field name="name">view.base.automation.form.custom</field>
    <field name="model">base.automation</field>
    <field name="inherit_id" ref="base_automation.view_base_automation_form"/>
    <field name="arch" type="xml">

        <field name="activity_user_id" position="after">
            <field name="employee_id" string="Employee" attrs="{
                'invisible': [('activity_user_type', '=', 'generic')],
                'required': [('state', '=', 'next_activity'), ('activity_user_type', '=', 'specific')]
            }"/>
        </field>

    </field>
</record>



</odoo>