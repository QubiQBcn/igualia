<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!--  ORDERS | Search  -->
<record id="view_res_partner_filter_custom" model="ir.ui.view">
    <field name="name">res.partner.select.custom</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_res_partner_filter"/>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
        <field name="parent_id" position="after">
            <field name="message_employee_ids" string="Employees"/>
        </field>

    </field>
</record>


<record id="res_partner_view_activity_custom" model="ir.ui.view">
    <field name="name">res.partner.activity.custom</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="mail.res_partner_view_activity"/>
    <field name="priority">1000</field>
    <field name="arch" type="xml">

        <!--   This Fields needs to be invisible in the View for triggering the Computation     -->
        <field name="parent_id" position="after">
            <field name="message_employee_ids" invisible="1"/>
        </field>

    </field>
</record>


</odoo>