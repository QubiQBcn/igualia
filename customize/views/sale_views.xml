<?xml version="1.0" encoding="utf-8"?>
<odoo>


<!--  ORDERS | Search  -->
<record id="view_sales_order_filter_custom" model="ir.ui.view">
    <field name="name">sale.order.search.inherit.sale.custom</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_sales_order_filter"/>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
        <field name="partner_id" position="after">
            <field name="message_employee_ids" string="Employees"/>
        </field>

    </field>
</record>


<record id="sale_order_view_activity_custom" model="ir.ui.view">
    <field name="name">sale.order.activity.custom</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.sale_order_view_activity"/>
    <field name="priority">1000</field>
    <field name="arch" type="xml">

        <!--   This Fields needs to be invisible in the View for triggering the Computation     -->
        <field name="partner_id" position="after">
            <field name="message_employee_ids" invisible="1"/>
        </field>

    </field>
</record>


</odoo>