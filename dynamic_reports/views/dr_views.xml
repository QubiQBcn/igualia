<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="dr_product_template_common_form_custom" model="ir.ui.view">
        <field name="name">dr.product.template.common.form.custom</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Reports" name="reports">
                    <group string="HTML Reports" name="html_reports">
                        <field name="description_reports" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>