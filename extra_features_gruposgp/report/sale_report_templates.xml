<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!--
NOTE: This is code is higly dipendent on the Grupo SGB requirements, hence if any data used as conditional statement
is changed, this template must be changed as well or obviously it won't work.
-->
<template id="extra_features_gruposgp__external_layout_clean_inherit" inherit_id="web.external_layout_clean">
    <xpath expr="//div[hasclass('row', 'mt8')]" position="replace">
        <!--  The conditional if doc and doc or o and o. is
         because those genius of Odoo had to put a different variable name for the document. Hence we
         check if doc is not undefined then check vat or is o is not undefined check vat....
         -->
        <div class="row mt8">
                <div class="col-3 mx-0">
                    <t t-if="doc and doc.company_id.vat == 'ESB63745848' or o and o.company_id.vat == 'ESB63745848'">
                        <span style="display: flex; flex-direction: column ; justify-content: center; align-items: center;" >
                            <img src="https://erp.igualia.net/web/image/13418411/1.jpg"  style="max-width: 65px; display: inline; " alt="Logo"/>
                            <img src="https://erp.igualia.net/web/image/13418412/2.jpg"  style="max-width: 65px; display: inline; " alt="Logo"/>
                        </span>
                    </t>
                </div>
                <div class="col-3 mx-0" style="font-size: .5rem;">
                    <span t-field="company.report_footer"/>
                </div>
                <div class="col-2 text-left mx-0" style="font-size: .6rem;">
                    <span class="company_address" t-field="company.partner_id"
                        t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                </div>
                <div class="col-3 mx-0" >
                    <h4 class="mt0 mb0 text-uppercase" t-field="company.report_header" style="font-size: .5rem;"/>
                </div>
                <div class="col-1">
                    <ul t-if="report_type == 'pdf'" class="list-inline pagenumber float-left text-center">
                        <li class="list-inline-item"><strong><span class="page"/></strong></li>
                    </ul>
                </div>
        </div>

    </xpath>
</template>





<template id="extra_features_gruposgp__external_layout_standard_inherit" inherit_id="web.external_layout_standard">
    <xpath expr="//div[hasclass('row')][3]" position="replace">
        <div  name="company_address" style="
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            position: relative;
            z-index: 1;
            width: 25%;
        ">
            <p t-field="company.partner_id" style="margin-bottom: 1px; font-size: .5rem;"/>
            <p t-field="company.vat" style="margin-bottom: 1px; font-size:  .5rem;"/>
            <p t-field="company.street" style="margin-bottom: 1px; font-size:  .5rem;"/>
            <p t-field="company.zip" style="margin-bottom: 1px; font-size:  .5rem;"/>
            <p t-field="company.state_id" style="margin-bottom: 1px; font-size:  .5rem;"/>
            <p t-field="company.country_id" style="margin-bottom: 1px; font-size:  .5rem;"/>

        </div>
    </xpath>
</template>

</odoo>
