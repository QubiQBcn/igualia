<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

<t t-name="FormStateO2ManySelection">
    <t t-set="color" t-value="widget.recordData.stage_color"/>
    <t t-set="stageName" t-value="widget.recordData.stage_id.data.display_name"/>
    <div class="btn-group o_selection o_project__status_ribbon o_project__ribbon-top-right" aria-atomic="true">
        <button href="#" data-toggle="dropdown" aria-expanded="false" role="button" title="Dropdown menu"  t-attf-class="oe_kanban_color__bg_#{color} o_project__status_badge o_project_status--button">
            <span t-attf-class="oe_kanban_color__text_#{color} text-bold">
                    <t t-esc="stageName" />
            </span>
        </button>
         <div class="dropdown-menu state o_project--zindex" role="menu"/>
    </div>
</t>


<t t-name="FormStateO2ManySelection.items">
    <t t-foreach="stages" t-as="stage">
        <button role="menuitem" class="dropdown-item" t-att-data-value="stage.name"  t-att-data-record-id="stage.dataId" t-att-data-id="stage.id">
            <t t-raw="stage.name"/>
        </button>
    </t>

</t>
</templates>